mixin storyResults(...items)
    - let [total, nonbin, fem, male] = items.map(item => item ? item.toString() + '%' : '0%')
    .results__row--bar
        .results__stats
            p !{nonbin} of NONBINARIES / !{fem} of FEMALES / !{male} of MALES
        .results__container
            div(class="results__bar" style={width: total, background: '#ffc40e', height: '4rem'}) !{total}